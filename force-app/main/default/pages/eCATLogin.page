<apex:page showHeader="false" sidebar="false" docType="html-5.0" standardStylesheets="false">
    
<html>

<head>
    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <style>
        .header {
            background-color: black;
            color: white;
            padding: 10px;
            font-size: 20px;
        }

        input[type=text] {
            outline: 0;
            border-width: 0 0 1px;
            border-color: lightgray;
            width: 340px;
            padding: 5px;
        }

        .btn-black {
            background-color: #000;
            color: #FFF;
        }
    </style>

    <script>
        j$ = jQuery.noConflict();
        j$(document).ready(function () {
            //alert('test');
        });

    </script>

</head>
<form class="form-horizontal" method="POST" id="contact_form">
    <fieldset>
        <div calss="row">
            <div class="col-md-12 header">
                <center>
                    <div class="col-md-8">
                        <label class="control-label">e-CAT Bus Parking Reservation Service</label>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Log in</label>
                    </div>
                </center>
            </div>
            <center>
                <div class="col-md-12" style="margin-top:100px;">

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label" style="font-size: 25px;">e - CAT</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label" style="color: lightgray; font-size: 13px;">Welcome back! Please login to your account.</label>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 50px;">
                        <div class="col-md-12">
                            <input id="username" maxlength="80" name="username" placeholder="Username" class="input-md" required="true" type="text" />
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 25px;">
                        <div class="col-md-12">
                            <input id="password" maxlength="80" name="password" placeholder="Password" class="input-md" required="true" type="text" />
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 25px;">
                        <div class="col-md-12">
                            <input id="chkTerms" name="rememberme" type="checkbox" />
                            <label class="control-label" style="font-size: 11px; padding-bottom: 2px; color: gray;">Remember me</label>
                            <label class="control-label" style="font-size: 11px; padding-bottom: 2px; margin-left: 130px; color: gray;">Forgot Password</label>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 25px;">
                        <button type="submit" name="login" id="login" class="btn btn-primary btn-black" style="width:150px;">Login</button>
                        <button type="submit" name="signup" id="signup" class="btn btn-default" style="margin-left: 30px;width:150px;">Sign up</button>
                    </div>
                </div>
            </center>

        </div>

    </fieldset>
</form>

</html>
</apex:page>